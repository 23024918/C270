<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color: rgb(162, 192, 219);">
  <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
    <div class="container-lg">
      <a class="navbar-brand fw-bold" href="#">To-Do List!</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tasks">Your Tasks</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addTask">Add Task</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

<br><br><br><br>
  <section class="task" id="task">
    <div class="container">
      <h2 class="display-5 fw-bold mb-4">Your Tasks</h2>
      <div class="row">
        <div class="col-lg col-sm-6 mt-4">
          <div class="card">
            <div class="card-body">
              <table class="table table-hover small text-center">
                <thead>
                  <tr>
                    <th>No.</th>
                    <th>Tasks</th>
                    <th>Priority</th>
                    <th>Deadline</th>
                    <th>Edit</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (task.length > 0) { %>
                    <% for (let i = 0; i < task.length; i++) { %>
                      <tr>
                        <td><%= task[i].taskId %></td>
                        <td><%= task[i].tasks %></td>
                        <td><%= task[i].priority %></td>
                        <td><%= task[i].deadline.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }) %></td>
                        <td><a href="/editTask/<%= task[i].taskId %>">Edit</a></td>
                        <td><a href="/deleteTask/<%= task[i].taskId %>" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a></td>
                      </tr>
                    <% } %>
                  <% } else { %>
                    <tr>
                      <td colspan="6">No tasks found.</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  
</body>
</html>

    
  